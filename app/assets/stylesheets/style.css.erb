*{
	margin:0 auto;
	font-size:12px;
	font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
	color:#555;
}

body{
  background:url(<%= asset_path "bg.jpg" %>) repeat-x #fff;
}

#geral{
	width:990px;
	height:auto;
}

#logo{
	width:170px;
	height:103px;
	float:left;
	margin-top:30px;
}

#logo_login{
	width:170px;
	height:103px;
	float:left;
	margin:140px 0 0 410px;
}

#menu{
	width:auto;
	height:auto;
	float:right;
	margin-top:30px;
}

#menu p a{
	color:#666;
	font-size:14px;
	text-decoration:none;
}

#menu a:hover{
	color:#393;
}

#logado{
	float:right;
	margin:0 10px 0 0;
}

.nome{
	color:#7dbb46;
	font-weight:bold;
}


#login{
	width:260px;
	height:160px;
	border:1px solid #dfdfdf;
    -moz-border-radius:15px;
    -webkit-border-radius:15px;
    border-radius:15px;
    -khtml-border-radius:15px;
	margin-top:30px;
	padding:20px; 
} 

.tit_login{
	font-size:24px;
}
	

#conteudo{
	width:950px;
	height:360px;
	border:1px solid #dfdfdf;
    -moz-border-radius:15px;
    -webkit-border-radius:15px;
    border-radius:15px;
    -khtml-border-radius:15px;
	margin-top:20px;
	padding:20px;
}

.titulo{
	font-size:24px;
	color:#a8a8a8;
	margin-bottom:25px;
}

table{

}

table.tab_conteudo th{
	background:#a8a8a8;
	text-align:center;
	color:#fff;
	padding:3px;
}

table.tab_conteudo td{
	border:1px solid #a8a8a8;
	text-align:center;
	padding:3px;
}

table.tab_conteudo td.cor_azul{
	border:1px solid #a8a8a8;
	background:#8bc5e6;
	text-align:center;
	padding:3px;
}

table.tab_conteudo td.cor_verde{
	border:1px solid #a8a8a8;
	background:#cfe3a2;
	text-align:center;
	padding:3px;
}

table.tab_conteudo td.cor_vermelha{
	border:1px solid #a8a8a8;
	background:#e6503b;
	text-align:center;
	padding:3px;
}
	
.submit
{
  width: 80px;
  height: 28px;
  border: none;
}

#cadastrar
{
  background: url(<%= asset_path "btn_cadastrar.png" %>) no-repeat;
}

#submit_login {
  background: url(<%= asset_path "btn_entrar.png" %>) no-repeat; 
}