<%= page "Cadastro" %>   

<p class="title">
  CADASTRO
</p><br />

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= render :partial => 'resource_errors', :locals => { :resource => resource } %>
  
<table>
  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email, :size => 25 %></td>
  </tr>

  <tr>
    <td><%= f.label :password %></td>
    <td><%= f.password_field :password, :size => 25 %></td>
  </tr>

  <tr>
    <td><%= f.label :password_confirmation, "Confirme a senha" %></td>
    <td><%= f.password_field :password_confirmation, :size => 25 %></td>
  </tr>     
    
  <tr>
  	<td colspan="2" align="right">
  	  <%= f.submit "", :class => :submit, :id => :cadastrar, :value => "" %>
  	</td>
  </tr>

</table>  
<br clear="all" />
<% end %>