<p class="title">
  <%= image_tag("icone_login.png") %> LOGIN
</p><br />
 
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %> 
  <%= render :partial => 'resource_errors', :locals => { :resource => resource } %>
  
  <table>
  	<tr>
    	<td><%= f.label :email %></td>
      <td><%= f.email_field :email, :size => 25 %></td>
    </tr>
    
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password, :size => 25 %></td>
    </tr> 
    
    <tr>
      <td colspan="2"><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
    </tr>  
    
    <tr>
    	<td colspan="2" align="right">
    	  <%= f.submit "", :class => :submit, :id => :submit_login %>
    	</td>
    </tr>   
    
    <td><%= link_to "Cadastrar", new_user_registration_path %></td>
    <td><%= link_to "Resetar senha", new_user_password_path %></td>
  </table><br clear="all" /> 
<% end %>  