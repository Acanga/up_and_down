<p class="title">
   RESETAR SENHA
</p><br />     



<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>      
<%= render :partial => "flash_messages" %>  
  
  <%= f.hidden_field :reset_password_token %>               
  
  <table>
    <tr>
      <td><%= f.label :password, "Nova senha" %></td>
      <td><%= f.password_field :password, :size => 25 %></td> 
      <% unless f.object.errors.empty? %>                                                           
        <td><div class="field_with_errors"><%= f.object.errors[:password].to_sentence %></div></td> 
      <% end %>
    </tr>  

    <tr>
      <td><%= f.label :password_confirmation, "Confirme a senha" %></td>
      <td><%= f.password_field :password_confirmation, :size => 25 %></td>  
      <% unless f.object.errors.empty? %>                                                           
        <td><div class="field_with_errors"><%= f.object.errors[:password_confirmation].to_sentence %></div></td> 
      <% end %>
    </tr> 
    
    <tr>
    	<td colspan="2" align="right">
    	  <%= f.submit "", :class => :submit, :id => :submit_login %>
    	</td>
    </tr>   
    
    <td><%= link_to "Login", new_user_session_path %></td>
  </table><br clear="all">
<% end %>